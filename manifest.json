{
  "manifest_version": 2,
  "name": "Reporter Plugin v0.1",
  "description": "Plugin to help reporters discover and publish Twitter content.",
  "version": "0.0.1",
  "update_url": "http://go/chrome-ext/update",
  "options_page": "page.html?page=settings",

  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action": {
    "default_icon": "img/bird.png",
    "default_popup": "page.html"
  },

  "icons": { "16": "img/bird.png",
             "48": "img/bird.png",
             "128": "img/bird.png" },

  "background": {
  	"scripts": [
	    "js/lib/jquery-1.10.1.min.js",
	    "js/lib/bootstrap.js",
	    "js/lib/async.js",
	    "js/lib/codebird.js",
	    "js/common.js",
	    "js/store.js",
	    "js/menu.js",
	    "js/background.js"
  	],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "run_at": "document_idle", 
      "js": [
      	"js/lib/jquery-1.10.1.min.js",
	    "js/lib/async.js",
      	"js/common.js", 
      	"js/contentscript.js"
  	  ],
      "css": [
      	"css/contentscript.css"
  	  ]
    }
  ],
  
  "web_accessible_resources": ["page.html"]
}
